	<target name="clean" depends="clean-main-common, clean-main-roboguiced"/>
	
	<target name="compile-main-common">
		<mkdir dir="${build.dir}/classes/main/common"/>
		<javac destdir="${build.dir}/classes/main/common" includeantruntime="false">
			<src path="${src.dir}/main/common" />
			<include name="**/*.java"/>
			<exclude name="**Utils.java"/>
			<classpath refid="classpath-main-common"/>
		</javac>
	</target>
	
	<target name="compile-main-roboguiced">
		<mkdir dir="${build.dir}/classes/main/roboguiced"/>
		<javac destdir="${build.dir}/classes/main/roboguiced" includeantruntime="false">
			<src path="${src.dir}/main/roboguiced"/>
			<classpath refid="classpath-main-roboguiced"/>
		</javac>
	</target>
	
