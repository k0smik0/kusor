		<delete dir="${build.dir}/classes/main/common"/>
	</target>
	<target name="clean-main-roboguiced">
		<delete dir="${build.dir}/classes/main/roboguiced"/>
	</target>
	
	<target name="clean-jars">
		<delete file="${jar-main-common.file}"/>
